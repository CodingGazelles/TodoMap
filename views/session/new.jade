doctype 5
html
  head
    title= 'Todo Map'

    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/bootstrap-responsive.css')
    link(rel='stylesheet', href='/css/style.css')

    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js")

  body
    p Google

    span(id="signinButton")
    span(class="g-signin", 
    data-scope="https://www.googleapis.com/auth/plus.login https://www.googleapis.com/auth/userinfo.email"
    data-clientid="834621316694.apps.googleusercontent.com", 
    data-redirecturi="postmessage",
    data-accesstype="offline",
    data-cookiepolicy="single_host_origin", 
    data-callback="signinCallback"
    )

    p Facebook


    div(id="authOps", style="display:none")
      h2 User is now signed in to the app using Google+
      p If the user chooses to disconnect, the app must delete all stored
        | information retrieved from Google for the given user.
      button(id="disconnect") Disconnect your Google account from this app

      h2 User's profile information
      div(id="profile")

      h2 Authentication Logs
      pre(id="authResult")

    div(id="loaderror")


    script(type="text/javascript")
      (function() {
       var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
       po.src = 'https://apis.google.com/js/client:plusone.js';
       var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
      })();

  script(src='/js/signin/gplus-signin-helper.js')

